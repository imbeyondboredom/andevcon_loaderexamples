<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hyperaware.android.talk.concurrency"
    android:versionCode="1"
    android:versionName="1.0"
>

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17"
    />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:allowBackup="true" >

        <activity
            android:name=".ActivityMain"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ActivityBasicThread"
            android:label="@string/title_activity_basic_thread"
        />

        <activity
            android:name=".ActivityBasicAsyncTask"
            android:label="@string/title_activity_basic_asynctask"
        />

        <activity
            android:name=".ActivityBasicLoader"
            android:label="@string/title_activity_basic_loader"
        />

        <activity
            android:name=".ActivityInvalidNonStaticLoader"
            android:label="@string/title_activity_invalid_nonstatic_loader"
        />

        <activity
            android:name=".ActivityStatefulLoader"
            android:label="@string/title_activity_stateful_loader"
        />

        <activity
            android:name=".ActivityMusicCursorLoader"
            android:label="@string/title_activity_music_cursor_loader"
        />

        <activity
            android:name=".ActivityProgressLoader"
            android:label="@string/title_activity_progress_loader"
        />

        <activity
            android:name=".ActivityBasicIntentService"
            android:label="@string/title_activity_basic_intent_service"
        />

        <service
            android:name=".IntentServiceBasic"
            android:label="@string/basic_intent_service"
        />

    </application>

</manifest>
